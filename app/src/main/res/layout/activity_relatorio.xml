<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/greyLigh">

        <android.support.v7.widget.Toolbar
            android:id="@+id/relatorioToolbar"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary">

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/greyDark"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/relatorioToolbarTxtTitle"
                    android:text="@string/relatorio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextTitleCenter"/>

                <ImageView
                    android:id="@+id/relImgFiltro"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="end|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search"/>

            </android.support.design.widget.CoordinatorLayout>
        </android.support.v7.widget.Toolbar>

        <View
            android:background="@color/greyDarkBlack"
            android:layout_width = "fill_parent"
            android:layout_height="1.5dp"
            android:layout_centerVertical ="true"
            android:layout_alignParentTop="true"/>

        <LinearLayout
            android:id="@+id/relLinearFiltros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:id="@+id/linenarOpcoesRat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/relSpnTipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginRight="5dp">
                </Spinner>

                <Spinner
                    android:id="@+id/relSpnCatGv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="30dp">
                </Spinner>
            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/greyDark"
                android:layout_width = "fill_parent"
                android:layout_height="1dp"
                android:layout_centerVertical ="true"
                android:layout_alignParentTop="true"/>

            <LinearLayout
                android:id="@+id/relLinearReceita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/relSpnStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_marginRight="5dp">
                    </Spinner>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="right">
                            <LinearLayout
                                android:id="@+id/relLinearGv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_retangle_light">
                                <TextView
                                    android:layout_marginLeft="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/TextLabelFilter"
                                    android:layout_gravity="center"
                                    android:text="@string/nrGv"/>

                                <com.hanks.library.AnimateCheckBox
                                    android:id="@+id/relCkeckGv"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:padding="4dp"
                                    app:animDuration="300"
                                    app:checkedColor="@color/greenLight"
                                    app:lineColor="@color/greyLigh"
                                    app:lineWidth="3dp"
                                    app:unCheckColor="@color/grey"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center">
                            <LinearLayout
                                android:id="@+id/relLinearRat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_retangle_light">
                                <TextView
                                    android:layout_marginLeft="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/TextLabelFilter"
                                    android:layout_gravity="center"
                                    android:text="@string/rat"/>

                                <com.hanks.library.AnimateCheckBox
                                    android:id="@+id/relCkeckRat"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:padding="4dp"
                                    app:animDuration="300"
                                    app:checkedColor="@color/greenLight"
                                    app:lineColor="@color/greyLigh"
                                    app:lineWidth="3dp"
                                    app:unCheckColor="@color/grey"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/greyDark"
                    android:layout_width = "fill_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical ="true"
                    android:layout_alignParentTop="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextLabelFilter"
                        android:text="@string/de"/>

                    <EditText
                        android:textColor="@color/greyDarkBlack"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/relEdtDtInicial"
                        android:textSize="15dp"
                        android:background="@null"
                        android:focusable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/ddmmyyyy"
                        android:inputType="date"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        style="@style/TextLabelFilter"
                        android:text="@string/ate"/>

                    <EditText
                        android:textColor="@color/greyDarkBlack"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/relEdtDtFinal"
                        android:textSize="15dp"
                        android:background="@null"
                        android:focusable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/ddmmyyyy"
                        android:inputType="date"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/relImgOrder"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_filter_list"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:background="@color/greyDark"
            android:layout_width = "fill_parent"
            android:layout_height="1dp"
            android:layout_centerVertical ="true"
            android:layout_alignParentTop="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/relRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9">

            <LinearLayout
                android:background="@color/greyLigh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <View
                    android:background="@color/greyDark"
                    android:layout_width = "fill_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical ="true"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:id="@+id/relTxtTotal"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    style="@style/TextLabelBlue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
