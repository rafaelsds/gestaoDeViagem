<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeNoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextTitleCenter">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitleLeft">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitle2Left">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextNormalCenter">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextNormal">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextLabelBlue">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLabelFilter">
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomProgressBarGreen" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_green</item>
    </style>

    <style name="CustomProgressBarHome" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_red</item>
    </style>

    <style name="CustomProgressBarRed" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_red</item>
    </style>

    <style name="CustomProgressBarBlue" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_blue</item>
    </style>

    <style name="DialogAnimationBottomToUp">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    <style name="AnimationBottomRightDiagonal">
        <item name="android:windowEnterAnimation">@anim/bottom_diagonal_right_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_diagonal_right_out</item>
    </style>

    <style name="AnimationTopRightDiagonal">
        <item name="android:windowEnterAnimation">@anim/top_diagonal_right_in</item>
        <item name="android:windowExitAnimation">@anim/top_diagonal_right_out</item>
    </style>

    <style name="DialogAnimationRightToLeft">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

    <style name="AnimationUpToBottom">
        <item name="android:windowEnterAnimation">@anim/pops_in</item>
        <item name="android:windowExitAnimation">@anim/pops_out</item>
    </style>



    <!--Style for AlertDynamic-->
    <style name="PopTheme" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/PopTheme1</item>
    </style>

    <style name="PopTheme1">
        <item name="android:windowEnterAnimation">@anim/pops_in</item>
        <item name="android:windowExitAnimation">@anim/pops_out</item>
    </style>

    <style name="SideTheme" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/SideTheme1</item>
    </style>

    <style name="SideTheme1">
        <item name="android:windowEnterAnimation">@anim/sides_in</item>
        <item name="android:windowExitAnimation">@anim/sides_out</item>
    </style>

    <style name="SlideTheme" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/SlideTheme1</item>
    </style>

    <style name="SlideTheme1">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>
    <!--Style for AlertDynamic-->
</resources>
